<h2>Theater</h2>
<%= link_to "Add a movie", "/admin/movies/new" %>
<h2>Movie List</h2>

<% if flash[:success] %>
    <p><%= flash[:success] %></p>
<% end %>

<p>検索</p>
<p><input type = "radio" name="show" > すべて </P>
<p><input type = "radio" name="show" 上映中> 上映中 </P>
<p><input type = "radio" name="show" 上映予定> 上映予定 </P>

<% @movies.each do |movie| %>
    <table>
        <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th>公開年</th>
            <th>概要</th>
            <th>画像URL</th>
            <th>上映中</th>
            <th>登録日時</th>
            <th>更新日時</th>
        </tr>
        <tr>
            <th><%= movie.id %></th>
            <th><%= movie.name %></th>
            <th><%= movie.year %></th>
            <th><%= movie.description %></th>
            <th><%= image_tag '1.jpg' %></th>
            <th>
                <% if movie.is_showing then %>
                上映中
                <% else %>
                上映予定
                <% end %>
            </th>
            <th><%= movie.created_at %></th>
            <th><%= movie.updated_at %></th>
        </tr>
    </table>
    <p><%= link_to "EDIT - id=" + movie.id.to_s, "/admin/movies/" + movie.id.to_s, method: :patch %>  </p>
    <p><%= link_to "DELETE - id=" + movie.id.to_s, "/admin/movies/" + movie.id.to_s, method: :delete %>  </p>

<% end %>
